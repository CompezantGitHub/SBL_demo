<?xml version="1.0" encoding="utf-8"?>
<odoo>
   
    <record model="ir.ui.view" id="action_medicine_sales_form">
        <field name="name">medicine.sales.form</field>
        <field name="model">medicine.sales</field>
        <field name="arch" type="html">
            <form>
                <group>
                    <field name="product_id" />
                    <field name="product_sold"/>
                </group>
                
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="action_medicine_sales_tree">
        <field name="name">medicine.sales.tree</field>
        <field name="model">medicine.sales</field>
        <field name="arch" type="html">
            <tree>
                <field name="product_id"/>
                <field name="product_sold"/>
            </tree>
        </field>
    </record>

    
    <record model="ir.actions.act_window" id="action_medicine_sales">
        <field name="name">Product Sales</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">medicine.sales</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
               Start Selling the product
            </p>
        </field>
    </record>

</odoo>
