<?xml version="1.0" encoding="utf-8"?>
<odoo>    


    <record model="ir.ui.view" id="view_sbl_product_tree">
    <field name="name">sbl.product.tree</field>
    <field name="model">sbl.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Med Name"/>
                <field name="price" string="Price"/>
                <field name="quantity" string="Available Qty"/>
                <field name="discription" string="Description"/>
                <field name="total_sold" string="Sold Item"/>
                
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="sbl_product_form_view">
           <field name="name">sbl.product.form</field>
           <field name="model">sbl.product</field>
           <field name="arch" type="xml">
               <form string="Accomodation">
                   <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <group>
                            <field name="name"/>
                            <field name="price"/>
                            <field name="quantity"/>
                            <field name="discription" string="Description"/>
                            <field name="total_sold" string="Sold Item"/>
                            <button name="action_test" string="Sold" type="object" class="oe_highlight"/>
                        </group>
                   </sheet>
               </form>
           </field>
    </record>

    <record id="action_product" model="ir.actions.act_window">
    <field name="name">sbl Product</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">sbl.product</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="help" type="html">
     <p class="o_view_nocontent_smiling_face">
     Create a SBL product
     </p>
    </field>
    </record>
</odoo>
